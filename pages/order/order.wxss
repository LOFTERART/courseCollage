/*底部按钮*/

.van-button--round{
    width: 300rpx;
}

.imgStyle{
    border-radius: 10rpx;
}

.buttonContain{
    padding-bottom: env(safe-area-inset-bottom);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    width: 100%;
    background-color: white;
}

.buttonContain::before {
    content: '';
    position: absolute;
    top: 0px;
    right: 0;
    left: 0;
    border-top: 1rpx solid #eaeef1;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}




